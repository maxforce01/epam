package ua.nure.gunko.practice6.part3;

public class Parking {
	protected int[] parking;
	protected int n;

	public Parking(int n) {
		this.n = n;
		parking = new int[n];
	}

	boolean arrive(int k) {
		if (k > 0 && k < n - 1) {
			int i = k;
			boolean result = false;
			while (i != parking.length) {
				if (parking[i] == 0) {
					parking[i] = 1;
					result = true;
					break;
				}
				i++;
			}
			if (!result) {
				i = 0;
				while (i != parking.length) {
					if (parking[i] == 0) {
						parking[i] = 1;
						result = true;
						break;
					}
					i++;
				}
			}
			return result;
		}else {
			throw new IllegalArgumentException();
		}
	}

	boolean depart(int k) {
		if (k > 0 && k < n - 1) {
			if (parking[k] == 1) {
				parking[k] = 0;
				return true;
			}
			
		} else {
			throw new IllegalArgumentException();
		}
		return false;
	}

	void print() {
		StringBuilder sb = new StringBuilder();
		for (int p : parking) {
			sb.append(p);
		}
		System.out.println(sb);
	}

}
